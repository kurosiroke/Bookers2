<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <div>
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %>
          errors prohibited this
          obj from being saved:
        </h3>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
       <% end %>
      </div>
      <%= form_with model: @book do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class: 'form-control book_title', id:"book_title" %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, class: 'form-control book_body', id: "book_body" %>
      </div>
      <div class="form-group">
        <%= f.submit class: "btn btn-success" do %>
         Update Book
        <% end %>
      </div>
      <%= link_to "Show", book_path(@book.id) %>
      |
      <%= link_to "Back", books_path %>
      <% end %>
    </div>
  </div>
</div>
