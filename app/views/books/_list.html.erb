<h2>User info</h2>
 <%= image_tag user.get_profile_image(100,100) %>
<table class="table">
  <thead>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </thead>
  <tbody></tbody>
</table>
<div class="row">
     <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-default btn-sm btn-block" do  %>
     <i class="fas fa-user-cog"></i>
     <% end %>
</div>
<h2 class="mt-3">New book</h2>
<%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit class: "btn btn-success btn-default btn-sm" do %>
    Create Book
  <% end %>
<% end %>