<h2>User info</h2>
<div>
  <h3><%#= user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
</div>
<%#@profile_image.each do |profile_image| %>
<div>
  <%#=link_to profile_image_path(profile_image.id) do %>
   <%#= image_tag profile_image.get_image %>
  <%# end %>
<%# end %>
</div>
<table class="table">
  <thead>
    <tr>
      <th>name</th>
      <th></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th></th>
    </tr>
  </thead>
  <tbody></tbody>
</table>
<div class="row">
     <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-default btn-sm btn-block" do  %>
     <i class="fas fa-user-cog"></i>
     <% end %>
</div>
<h2 class="mt-3">New book</h2>
<%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit class: "btn btn-success btn-default btn-sm " do  %>
  Create Book
  <% end %>
<% end %>