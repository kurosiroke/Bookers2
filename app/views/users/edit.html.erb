
<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.erroes.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info</h2>
<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name" %>
  <label for="inputImage">Image</label>
  <%= f.file_field :profile_image, placeholder: "profile_image", accept: "image/*" %>
  <label for="user introduction">Introduction</label>
  <%= f.text_field :introduction, id:"introduction" %>
   <%= f.submit class: "btn btn-secondary btn-default btn-sm " do %>
    Update Users
  <% end %>
<% end %>
</div>
  <div>
</div>