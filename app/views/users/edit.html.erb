<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
      <h3>
      <%= @user.errors.count %>
      errors prohibited this
      obj from being saved:
      </h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="user_name">Name</label>
        <%= f.text_field :name, class: 'form-control name', placeholder: "Name", id: "name" %>
      </div>
      <div class="form-group">
        <label for="user_image">Image</label><br>
        <%= f.file_field :profile_image, class: 'form-control-fils user-image', accept: "image/*" %>
      </div>
      <div class="form-group">
        <label for="user introduction">Introduction</label>
        <%= f.text_area :introduction, class: 'form-control introduction', id: "user_introduction" %>
      </div>
      <div class="form-group">
         <%= f.submit class: "btn btn-secondary" do %>
          Update Users
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
